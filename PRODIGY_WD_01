        }

        #navbar a {
            color: white;
            text-decoration: none;
            font-size: 1.2em;
            transition: color 0.3s;
        }

        #navbar a:hover {
            color: #ff6347;
        }

        #navbar.scrolled {
            background-color: #222;
        }

        main {
            margin-top: 70px; /* height of the navbar */
        }

        section {
            height: 100vh; /* Full height of the viewport */
